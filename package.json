{
  "name": "vibe-coding-pomodoro-timer",
  "displayName": "Vibe Coding Pomodoro Timer",
  "description": "코딩할 때 사용할 수 있는 뽀모도로 타이머 익스텐션",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vibe-coding-pomodoro-timer.startTimer",
    "onCommand:vibe-coding-pomodoro-timer.stopTimer",
    "onCommand:vibe-coding-pomodoro-timer.resetTimer",
    "onCommand:vibe-coding-pomodoro-timer.nextSession"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vibe-coding-pomodoro-timer.startTimer",
        "title": "뽀모도로 타이머 시작"
      },
      {
        "command": "vibe-coding-pomodoro-timer.stopTimer",
        "title": "뽀모도로 타이머 정지"
      },
      {
        "command": "vibe-coding-pomodoro-timer.resetTimer",
        "title": "뽀모도로 타이머 리셋"
      },
      {
        "command": "vibe-coding-pomodoro-timer.nextSession",
        "title": "다음 세션으로 이동"
      }
    ],
    "statusBar": {
      "alignment": "left",
      "priority": 100
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.13.0",
    "typescript": "^4.7.2"
  }
}
